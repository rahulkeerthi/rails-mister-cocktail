<div class="container">
  <div class = "mt-3 grid-container">
    <% @cocktails.each do |cocktail| %>
    <div class="grid-item card">
      <%= link_to cocktail_path(cocktail) do %>
        <%= image_tag "https://source.unsplash.com/featured/?{cocktail}", class: "card-img-top" %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= cocktail.name %></h5>
        <p class="card-text"><%= cocktail.description.split(/\./).first %></p>
        <p class=""><%= link_to "See more", cocktail_path(cocktail), class: "btn btn-primary" %></p>
      </div>
    </div>
    <% end %>
  </div>
</div>

