<div class="d-flex justify-content-between">
  <% @categories.each do |category| %>
  <div class="card-category col-3"><%= category %>
  </div>
  <% end %>
</div>
<div class="container">
  <div class = "mt-3 grid-container">
    <% @cocktails.each do |cocktail| %>
    <div class="grid-item card">
      <h1 class="position-absolute text-white"><%= cocktail.name %></h1>
      <div><%= link_to cocktail_path(cocktail) do %>
        <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :thumb, auto: :subject, class: "card-img-top" %>
      <% end %></div>
      <div class="card-body d-flex flex-column">
        <p class="card-text text-right"><%= cocktail.description.split(/\./).first %></p>
        <p class="align-self-end"><%= link_to "Details", cocktail_path(cocktail), class: "btn-ghost" %></p>
      </div>
    </div>
    <% end %>
  </div>
</div>

